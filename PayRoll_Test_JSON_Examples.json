{
  "description": "PayRoll API Test JSON Examples",
  "endpoint": "POST /api/payroll/calculate",
  
  "examples": [
    {
      "name": "1. Basic Request - Use current staff pay rate",
      "json": {
        "staffId": 1,
        "mondayDate": "2024-12-30"
      }
    },
    {
      "name": "2. With Special Pay Rate - Use default award rate based on Role/ContractType",
      "json": {
        "staffId": 1,
        "mondayDate": "2024-12-30",
        "isSpecialPayRate": true
      }
    },
    {
      "name": "3. Explicitly disable special pay rate",
      "json": {
        "staffId": 2,
        "mondayDate": "2025-01-06",
        "isSpecialPayRate": false
      }
    },
    {
      "name": "4. Calculate for Manager with special rate",
      "json": {
        "staffId": 5,
        "mondayDate": "2025-01-13",
        "isSpecialPayRate": true
      }
    },
    {
      "name": "5. ERROR TEST - Not a Monday (will return 400 error)",
      "json": {
        "staffId": 1,
        "mondayDate": "2024-12-31"
      },
      "expectedError": "Error: The provided date is not a Monday"
    },
    {
      "name": "6. ERROR TEST - Staff not found (will return 404 error)",
      "json": {
        "staffId": 9999,
        "mondayDate": "2024-12-30"
      },
      "expectedError": "Staff with ID 9999 not found"
    },
    {
      "name": "7. ERROR TEST - Invalid date format (will return 400 error)",
      "json": {
        "staffId": 1,
        "mondayDate": "30-12-2024"
      },
      "expectedError": "Invalid date format. Use format: yyyy-MM-dd"
    }
  ],

  "notes": {
    "dateFormat": "yyyy-MM-dd (e.g., 2024-12-30)",
    "mondayDates": "MUST be a Monday, otherwise returns error",
    "isSpecialPayRate": {
      "true": "Uses default Horticulture Award 2025 rates based on staff Role and ContractType",
      "false": "Uses current staff's StandardPayRate from database",
      "omitted": "Same as false - uses current pay rate"
    },
    "defaultPayRates": {
      "Worker-FullTime": "$25.00/hr",
      "Worker-PartTime": "$25.00/hr", 
      "Worker-Casual": "$31.25/hr",
      "Manager-FullTime": "$35.00/hr",
      "Manager-PartTime": "$35.00/hr",
      "Manager-Casual": "$43.75/hr"
    }
  },

  "expectedSuccessResponse": {
    "staffId": 1,
    "staffName": "John Doe",
    "weekStartDate": "2024-12-30T00:00:00",
    "totalHoursWorked": 43.5,
    "grossWeeklyPay": 1400.00,
    "annualIncome": 72800.00,
    "annualTax": 12628.00,
    "weeklyPAYG": 243.00,
    "netPay": 1157.00,
    "employerSuperannuation": 161.00
  },

  "quickCopyPaste": {
    "basic": {
      "staffId": 1,
      "mondayDate": "2024-12-30"
    },
    "withSpecialRate": {
      "staffId": 1,
      "mondayDate": "2024-12-30",
      "isSpecialPayRate": true
    }
  }
}

